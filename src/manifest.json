{
  "manifest_version": 3,
  "name": "MY YT SUMMARIZER",
  "description": "Extracts YouTube captions locally and summarizes them with a Google AI model.",
  "version": "0.1.0",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://m.youtube.com/*",
    "https://*.youtube.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://m.youtube.com/*",
        "https://*.youtube.com/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "css": [
        "sidebar.css"
      ],
      "run_at": "document_idle"
    }
  ]
}
